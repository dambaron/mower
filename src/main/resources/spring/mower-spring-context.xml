<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <import resource="mower-spring-util-context.xml"/>

    <context:annotation-config/>

    <bean id="mowerApp" class="org.dbaron.mower.application.MowerApp"/>

    <bean id="fileConfigurationParser" class="org.dbaron.mower.parser.FileConfigurationParser">
        <constructor-arg name="orientationsDictionnary" ref="orientationsDictionnary"/>
        <constructor-arg name="movesDictionnary" ref="movesDictionnary"/>
    </bean>

    <bean id="moveProviderService" class="org.dbaron.mower.service.MoveProviderServiceImpl"/>

    <bean id="pointProviderService" class="org.dbaron.mower.service.PointProviderServiceImpl"/>

    <bean id="mowerService" class="org.dbaron.mower.service.MowerServiceImpl"/>
</beans>